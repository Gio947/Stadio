@model stadio.Models.Utente

@{
    ViewBag.Title = "Conto";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <div class = "control-label col-md-2"><b>Importo</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.conto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.conto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Carica" class="btn btn-default" />
            </div>
        </div>
    </div>
}