@model stadio.Models.Partita

@{
    ViewBag.Title = "Registrazione partita";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" align="center">
    <h4>Registra una nuova partita</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.nome)

    <div class="form-group" style="width:50%" align="center">
        @Html.LabelFor(model => model.competizione, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" align="center">
            @Html.EditorFor(model => model.competizione, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.competizione, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="width:50%" align="center">
        @Html.LabelFor(model => model.squadra1, htmlAttributes: new { @class = "control-label col-md-2" })
