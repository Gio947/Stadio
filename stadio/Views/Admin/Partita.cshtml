            @Html.ValidationMessageFor(model => model.squadra2, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="width:50%" align="center">
        @Html.LabelFor(model => model.dataInizio, htmlAttributes: new { @class = "control-label col-md-2" })
